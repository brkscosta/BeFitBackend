{
    "name": "befitbackend",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "scripts": {
        "start": "node dist/index.js",
        "dev:server": "ts-node-dev --respawn --transpile-only src/index.ts",
        "check-sintax": "yarn lint && tsc -p tsconfig.json",
        "build": "yarn check-sintax && yarn mkdir-assets && yarn copy-files",
        "test": "yarn check-sintax && nyc mocha dist/test/*.js --recursive --timeout 60000 --exit",
        "format": "npx prettier --write .",
        "lint": "eslint --ext .ts --fix src/**/*.ts test/**/*.ts",
        "copy-files": "cp ~/befitbackend/src/app/assets/*.html ~/befitbackend/dist/src/app/assets/",
        "mkdir-assets": "mkdir ~/befitbackend/dist/src/app/assets"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/chai": "^4.3.4",
        "@types/express": "^4.17.17",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.13.0",
        "@types/nodemailer": "^6.4.7",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "chai": "^4.3.7",
        "dotenv": "^16.0.3",
        "eslint": "^8.34.0",
        "husky": "^8.0.3",
        "mocha": "^10.2.0",
        "prettier": "^2.8.4",
        "pretty-quick": "^3.1.3",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "bcrypt": "^5.1.0",
        "express": "^4.18.2",
        "mongoose": "^6.9.1",
        "nodemailer": "^6.9.1",
        "nyc": "^15.1.0",
        "winston": "^3.8.2",
        "winston-daily-rotate-file": "^4.7.1"
    }
}
